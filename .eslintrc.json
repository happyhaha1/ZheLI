{
  "extends": "@lightwing",
  "overrides": [
    {
      "files": "src/main/**/*.ts",
      "rules": {
        "@typescript-eslint/consistent-type-imports": "off"
      }
    },
    {
      "files": "*",
      "rules": {
        "@typescript-eslint/indent": ["error", 4],
        "@typescript-eslint/brace-style": ["error", "1tbs", { "allowSingleLine": true }]
      }
    }
  ]
}
